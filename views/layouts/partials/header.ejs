<link rel="stylesheet" href="/css/home.css">
<header class="header">
    <div class="container">
        <div class="header-content">
            <div class="header-logo">
                <a href="/">
                    <img src="/image/logo-ppi.png" alt="PPI AIU Logo">
                </a>
                <span class="header-logo-name">PPI AIU</span>
            </div>
            <nav class="header-navigation">
                <ul>
                    <li><a href="/home" class="header-link">Home</a></li>
                    <li><a href="/periode" class="header-link">Board</a></li>
                    <li><a href="/events" class="header-link">Blogs</a></li>
                    <li><a href="/fondasi" class="header-link">Foundation</a></li>
                    <% if(currentUser) { %>
                    <li><a href="/logout" class="header-link" onclick="
                    event.preventDefault();
                    document.getElementById('logout-form').submit();"
                        >Logout</a>
                    <form id="logout-form" action="/logout" method="post" style="display: none;" >
                    </form>
                    </li>
                    <% } else { %>
                    <li><a href="/login" class="header-link">Login</a></li>
                        <% } %>
 
                </ul>
            </nav>
        </div>
    </div>
</header>
