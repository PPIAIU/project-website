<section  class="sectionForm">
    <div class="form">
        <form action="/divisi/<%= periode_id %>/store" method="post" enctype="multipart/form-data">
        <div class="title">Welcome</div>
        <div class="subtitle">Let's create new division!</div>
        <div class="input-container ic1">
          <input type="text" name="divisi[name]" id="name" class="input" required>
          <div class="cut"></div>
          <label for="name" class="placeholder">Name of division</label>
        </div>
        <div class="input-container ic1">
            <input type="text" name="divisi[deskripsi]" id="deskripsi" class="input" required>
            <div class="cut"></div>
            <label for="name" class="placeholder">Deskription</label>
          </div>
        <div class="input-container ic2">
          <input type="file" name="image" accept="image/*" required>
          <label for="image" class="placeholder">Image of division</label>
        </div>
        <button type="text" class="submit">submit</button>
    </form>
    </div>
    
