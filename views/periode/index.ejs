<% layout('layouts/app') %>
<link rel="stylesheet" href="/css/board.css">

<section class="slider_section">
  <h1 class="title">Our <span>Cabinets</span> </h1>

    <div class="periode-list">
        <% for (let periode of periodes) { %>
                <a style="margin-left: 20px;" href="/periode/<%= periode._id %>">
                  <% for(const image of periode.image) { %>
                      <div> <img src="/image/periode/<%= image.filename %>" class="imagePeriode"  alt="no-image"></div> 
                  <% }  %>  
                   <div> <h2 class="titleNameCabinet"> <%= periode.name %></h2> </div>
                  <div class="namecabinet">Our board</div>  
                </a>  
        <% } %>
    </div>
    <% if(currentUser) { %>
        <button class="new-periode-button">
            <a href="/periode/create">New Cabinet</a>
        </button>
        
        <% } %>


<script src="/js/hidden.js"></script>