<% layout('layouts/app') %>
<link rel="stylesheet" href="/css/board.css">

<section class="slider_section">
    <h1 class="title">Our <span>Cabinets</span></h1>
    <p style="color: #b0b0b0; text-align: center; font-size: 1.2rem; margin-bottom: 2rem; max-width: 600px;">
        Meet the dedicated leaders who shape PPI AIU's vision and activities
    </p>

    <div class="periode-list">
        <% for (let periode of periodes) { %>
            <a href="/periode/<%= periode._id %>">
                <% for(const image of periode.image) { %>
                    <div>
                        <img src="/image/periode/<%= image.filename %>" class="imagePeriode" alt="<%= periode.name %>">
                    </div>
                <% } %>
                <div>
                    <h2 class="titleNameCabinet"><%= periode.name %></h2>
                </div>
                <div class="namecabinet">View Board</div>
            </a>
        <% } %>
    </div>
    
    <% if(currentUser) { %>
        <button class="new-periode-button">
            <a href="/periode/create" style="color: inherit;">New Cabinet</a>
        </button>
    <% } %>
</section>

<script src="/js/hidden.js"></script>